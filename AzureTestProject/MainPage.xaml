<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="AzureTestProject.MainPage"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml">

    <ScrollView>
        <VerticalStackLayout Padding="30,0" Spacing="25">
            <Entry x:Name="SasTokenEntry" Placeholder="Insert SasToken here" />
            <Entry x:Name="UserIdOrBlobName" Placeholder="Insert User Id or Blob Name" />
            <HorizontalStackLayout>
                <Label Text="Find By User Id" VerticalOptions="Center" />
                <Switch x:Name="FindByUserId" IsToggled="False" />
            </HorizontalStackLayout>
            <HorizontalStackLayout>
                <VerticalStackLayout>
                    <Image
                        x:Name="FileImage"
                        Aspect="AspectFit"
                        HeightRequest="185"
                        WidthRequest="200" />
                    <Button
                        x:Name="FileDownloadButton"
                        Clicked="FileDownloadButton_Clicked"
                        Text="Download File and Save to Cache" />
                    <Button
                        x:Name="DeleteCache"
                        Clicked="DeleteAllCachedImages"
                        Text="Clear Cache" />
                    <Button
                        x:Name="ReloadCacheImage"
                        Clicked="ReloadImageAsync"
                        Text="Reload Cache Image" />
                </VerticalStackLayout>
                <VerticalStackLayout>
                    <Image
                        x:Name="StreamImage"
                        Aspect="AspectFit"
                        HeightRequest="185"
                        WidthRequest="200" />
                    <Button
                        x:Name="DownloadStreamImage"
                        Clicked="DownloadStreamImage_Clicked"
                        Text="Download Stream Image" />
                </VerticalStackLayout>
            </HorizontalStackLayout>



        </VerticalStackLayout>
    </ScrollView>

</ContentPage>
